{{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">{{ form_row(form.firstName) }}</div>
    </div>
    <div class="row">
        <div class="col-md-12">{{ form_row(form.lastName) }}</div>
    </div>
    <div class="row">
        <div class="col-md-12">{{ form_row(form.email) }}</div>
    </div>
    <div class="row">
        <div class="col-md-12">{{ form_row(form.password) }}</div>
    </div>
    {{ form_widget(form) }}
    <button class="btn btn-primary">{{ button|default("S'inscrire") }}</button>
{{ form_end(form) }}
