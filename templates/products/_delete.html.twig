<form method="post" action="{{ path('app_products_delete', {id: product.id}) }}" onsubmit="return confirm('Are you ' +
 'sure you want to delete this product?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('product_deletion_' ~ product.id) }}">
    <button class="btn btn-danger">{{ 'supprimer' | trans }}</button>
</form>
